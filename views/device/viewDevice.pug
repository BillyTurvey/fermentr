extends ../layout

block content

	h2 Device: !{device.name} 


	p.description !{device.description}

	article.assigned-fermentation
		if (device.assignedFermentation)
			p !{device.name} is currently assigned to '
				a(href=`/fermentation/${device.assignedFermentation._id}`) !{device.assignedFermentation.name}
				| '.
		else
			p 
				| !{device.name} is not currently assigned to a fermentation. You can either 
				a(href="/fermentation/add") create a new fermentation
				| , or assign a preexisting fermentation by 
				a(href=`/device/${device._id}/edit`) editing this device
				|.

	a(href=`/device/${device._id}/edit`) Edit device details.
