extends ../layout 

block content

	article.flex-grow
		h1 Edit Account Information

		form(action="/user/register" method="POST")

			label(for="name") Name
			input(type="text" name="name" value=user.name||'' required)
			br

			label(for="email") Email
			input(type="text" name="email" value=user.email||'' required)
			br

			button(type="submit") Update Account Details

		a(href=`/user/deleteAccount`) Delete your account.
