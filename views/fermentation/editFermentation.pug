extends ../layout

block content

	if (editingExhistingFermentation)
		h1 Edit Fermentation 
	else 
		h1 Add New Fermentation

	- 
		const f = fermentation ? fermentation : null;
		const actionPath = fermentation ? `/?${fermentation.id}/update` : '/fermentation/add';
		// optional chaining doesn't work inline, hence this values object
		const values = {
			name: f?.name || '',
			description: f?.description || '', 
			targetOG: f?.gravity?.targetOG || '', 
			actualOG: f?.gravity?.actualOG || '', 
			targetFG: f?.gravity?.targetFG || '', 
			actualFG: f?.gravity?.actualFG || ''
		};

	form(action= actionPath method= f ? 'PUT' : 'POST') 

		label(for="name") Name
		input(type="text" name="name" value=values.name required)
		br
		label(for="description") Description
		textarea(name="description" rows=5 columns=33 value=values.description)
		br
		label(for="targetFG") Target OG
		input(type="number" name="targetOG" value=values.targetOG)
		br
		label(for="actualFG") Actual OG
		input(type="number" name="actualOG" value=values.actualOG)
		br
		label(for="targetFG") Target FG
		input(type="number" name="targetFG" value=values.targetFG)
		br
		if (editingExhisitngFermentation)
			label(for="actualFG") Actual FG
			input(type="number" name="actualFG" value=values.actualFG)
			br


		if (devices.length > 0)
			h3 Select a device to monitor/control this fermentation
			each device in devices
				.deviceRadio
					input(type="radio" id=device.name name="device" value=device._id)
					label(for=device.name) !{device.name}
						span.device-description  - !{device.description}


		button(type="submit") Submit

	if (editingExhistingFermentation)
		form(action=`/fermentation/${f.id}/delete` method="POST")
			button(type="submit") Delete !{fermentation.name}
